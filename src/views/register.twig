{% extends 'layout.twig' %}

{% block title %}Register{% endblock %}

{% block register_class %}class="active"{% endblock %}

{% block content %}
    <div class="page-header">
        <h1 id="navbar">Register</h1>
    </div>

    <div style="width: 500px; margin: auto;">
        {% if notifications is not empty %}
            {{ notifications | raw }}
            <br/>
        {% endif %}

        <form class="form-horizontal" method="POST" action="/register">
            <div class="form-group">
                <label for="email" class="col-sm-4 control-label">Email</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" id="email" name="email" placeholder="your@email.com" />
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-4 control-label">Password</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" id="password" name="password" />
                </div>
            </div>
            <div class="form-group">
                <label for="password-copy" class="col-sm-4 control-label">Confirm Password</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" id="password-copy" name="password-copy" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8 col-md-offset-4">
                    <button type="submit" class="btn btn-default">Register</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}